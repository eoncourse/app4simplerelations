<%= form_for(@task) do |f| %>
    <% if @task.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

          <ul>
            <% @task.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :name %>
      <br/>
      <%= f.text_field :name %>
    </div>

    <div class="field">
      <%= f.label :priority %>
      <br/>
      <%= f.number_field :priority %>
    </div>

    <div class="field">
      <%= f.label :assigned_to %>
      <br/>
      <%= f.select :employee_id, all_employees %>
    </div>

    <div class="field">
      <%= f.label :note %>
      <br/>
      <%= f.text_area :note, :rows => 5 %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
